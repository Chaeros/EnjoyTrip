<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.enjoytrip.domain.attractionboardlike.mapper.AttractionBoardLikeMapper">
    <insert id="insertAttractionBoardLike" parameterType="AttractionBoardLikeAddRequestDto">
        insert into attraction_board_like (
            attraction_board_id, member_id
        ) values (
            #{attraction_board_id}, #{member_id}
        )
    </insert>

    <delete id="deleteAttractionBoardLike" parameterType="long">
        delete
          from attraction_board_like
         where member_id = #{member_id}
    </delete>

    <select id="findAttractionBoardLike" parameterType="long" resultType="int">
        select count(*)
          from attraction_board_like
         where member_id = #{member_id}
    </select>

    <select id="findAttractionBoardLikeCount" parameterType="int" resultType="int">
        select count(*)
          from attraction_board_like
         where attraction_board_id = #{attraction_board_id}
    </select>
</mapper>